	"authors": [
		"Provismet"
	],
	"contact": {
		"homepage": "https://github.com/Provismet/ProviHealth",
		"sources": "https://github.com/Provismet/ProviHealth",
		"issues": "https://github.com/Provismet/ProviHealth/issues"
	},
	"license": "Lily License",
	"icon": "assets/provihealth/icon.png",
